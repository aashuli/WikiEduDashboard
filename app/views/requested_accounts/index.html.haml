- if @results.present?
  .container.form-container
    %h1 Results
    - @results.each do |result|
      %li= result

.container.form-container
  %h1 Requested accounts for your courses

  - if @courses.empty?
    %p No requested accounts
  - else
    - @courses.each do |course|
      %h2= course.title
      %table.table.w100
        %thead
          %th.w25 Username
          %th Email
          %th.w25 Actions
        %tbody
          - course.requested_accounts.each do |request|
            %tr
              %td= request.username
              %td= request.email
              %td
                %a{href: "/requested_accounts/#{course.slug}/#{request.id}/delete", 'data-method': :delete}> Delete this request
      .container.mt2.mb2
        %a.button{href: "/requested_accounts/#{course.slug}/create", 'data-method': :post} Create these accounts
    %hr
    .container.mt2.mb2
      %a.button.danger{href: "/requested_accounts", 'data-method': :post} Create all accounts
